@model IEnumerable<SalesStore.Entities.ItemBrand>

@{
    ViewBag.Title = "Brand Details";
}

<h2>@ViewBag.Title</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <a href="@Url.Action("Create", "BrandDetails")" class="btn btn-primary btn-large">
        Create
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.brandName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.arabicName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isActive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.brandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.arabicName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.itemBrandCode }, new { @class = "btn btn-warning btn-large" }) 
                @Html.ActionLink("Details", "Details", new { id = item.itemBrandCode }, new { @class = "btn btn-warning btn-large" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.itemBrandCode }, new { @class = "btn btn-warning btn-large" })
            </td>
        </tr>
    }

</table>
